<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.withstudy.user.dao.UserDAO">
 	<select id="selectcheckloginId" resultType="int" parameterType="String">
 		SELECT COUNT(*)
 		FROM
 			`user`
 		WHERE
 			`loginId` = #{loginId}
 	</select>
 	
 	<select id="selectUserSignIn" resultType="com.withstudy.user.model.User" parameterType="Map">
 		SELECT
 			`id`
			, `loginId`
			, `password`
			, `name`
			, `email`
			, `location`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
 		FROM
 			`user`
 		WHERE
 			`loginId` = #{loginId}
 			AND	`password` = #{password}
 	</select>
 	
 	<select id="selectUserByuserId" resultType="com.withstudy.user.model.User" parameterType="int">
 		SELECT
 			`id`
			, `loginId`
			, `password`
			, `name`
			, `email`
			, `location`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
 		FROM
 			`user`
 		WHERE
 			`id` = #{userId}
 	</select>
 	
 	<insert id="insertUser" parameterType="Map">
 		INSERT INTO `user`
 		(
 			`loginId`
			, `password`
			, `name`
			, `email`
			, `location`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
 		)
 		VALUES
 		(
 			#{loginId}
 			, #{password}
 			, #{name}
 			, #{email}
 			, #{location}
 			, NULL
 			, NOW()
 			, NOW()
 		)
 	</insert>
 </mapper>